<%= form_for(@shelf) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name of Shelf" %>
    <%= f.text_area :description, placeholder: "Brief description of this shelf..." %>
  </div>
  <%= f.submit "Create New Shelf", class: "btn btn-primary" %>
<% end %>