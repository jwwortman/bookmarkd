<% provide(:title, @book.title) %>
<h1><%= @book.title %></h1>
<h2><strong>Author:</strong> <%= @book.author %></h2>
<h2><strong>Publisher:</strong> <%= @book.publisher %></h2>
<h2><strong>ISBN:</strong> <%= @book.isbn %></h2>

<% if @book.catalogs.present? %>
  <ul class="libraries">
    <%= render @book.libraries %>
  </ul>
<% end %>

<% if @book.bookshelves.present? %>
  <ul class="shelves">
    <%= render @book.shelves %>
  </ul>
<% end %>