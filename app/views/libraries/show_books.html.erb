<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @library.user %>
      <h1><%= @library.name %></h1>
      <span><%= link_to "view my profile", @library.user %></span>
      <span><b>Books:</b> <%= @library.books.count %></span>
    </section>
    <section class="book_form">
        <%= render 'shared/book_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @books.any? %>
      <ul class="library books">
        <%= render @library.books %>
      </ul>
    <% end %>
  </div>
</div>