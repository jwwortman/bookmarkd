<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @library.user %>
      <h1><%= @library.name %></h1>
      <span><%= link_to "view my profile", @library.user %></span>
      <span><b>Shelves:</b> <%= @library.shelves.count %></span>
    </section>
    <section class="shelf_form">
        <%= render 'shared/shelf_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @shelves.any? %>
      <ul class="library shelves">
        <%= render @shelves %>
      </ul>

    <% end %>
  </div>
</div>